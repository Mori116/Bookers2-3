<div class="contaner">
  <div class="row">
    <div class="mx-auto">
      <h2>User info</h2>

      <% if @user.errors.any? %>
        <h3 class="error"><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul  class="error-message">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user, local:true do |f| %>
        <%= f.label :name %><br>
        <%= f.text_field :name, class: "col-12 px-1"%><br>
        <%= f.label :image %><br>
        <%= f.attachment_field :profile_image %><br>
        <%= f.label :introduction %><br>
        <%= f.text_area :introduction, class: "col-12 px-1" %><br>
        <%= f.submit "Update User", class: "btn btn-secondary actions" %>
      <% end %>
    </div>
  </div>
</div>