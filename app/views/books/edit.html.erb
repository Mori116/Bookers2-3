<div class="contaner">
  <div class="row">
    <div class="mx-auto">
      <h2>Editing Book</h2>

        <% if @book.errors.any? %>
          <h3 class="error"><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
          <ul  class="error-message">
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_with model: @book, local:true do |f| %>
          <%= f.label :title %><br>
          <%= f.text_field :title, class: "col-12 px-1"%><br>
          <%= f.label :body %><br>
          <%= f.text_area :body, class: "col-12 px-1" %><br>
          <%= f.submit "Update User", class: "btn btn-success actions" %>
        <% end %>
        <%= link_to "Show", book_path(@book) %>
        |
        <%= link_to "Back", books_path %>
    </div>
  </div>
</div>